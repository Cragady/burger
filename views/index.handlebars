<h1 class="jumbotron text-center">Steak Out, Berg In!</h1>

<section class="container">
    <div class="row">
        <div class="row col mx-auto">
            <section class="card mx-auto">
                <h4 class="card-header text-center">Burgers not eaten:</h4>

                <ul class="mx-auto px-0">
                    {{#each burgers}}
                        {{#unless devoured}}
                            <div>{{burger_name}}</div>
                        {{/unless}}
                    {{/each}}
                </ul>

            </section>
            
            <div class="col-12 mt-3 text-center"><button id="eat-me" class="btn">Eat Me!</button></div>
        </div>

        <div class="row col mx-auto">
            <section class="card mx-auto">
                <h4 class="card-header text-center">Burgers eaten:</h4>

                <ul class="mx-auto px-0">
                    {{#each burgers}}
                        {{#if devoured}}
                            <div>{{burger_name}}</div>
                        {{/if}}
                    {{/each}}
                </ul>

            </section>

            <div class="col-12 mt-3 text-center"><button id="ewww" class="btn">Give Back</button></div>
        </div>

        <textarea id="new-berg" class="col-12 mx-auto mt-5"></textarea>
        <div class="col-12 mt-1 text-center"><button id="add-berg" class="btn">Add a Burger!</button></div>
    </div>
</section>